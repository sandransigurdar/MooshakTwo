@model Mooshak2.Models.ViewModels.StudentAssignmentViewModel
@{
    Layout = "~/Views/Shared/StudentLayout.cshtml";
}

    <script src="https://code.jquery.com/jquery-1.9.1.min.js">

        $(document).ready(function () {

        $(".btn").click(function () {
            var divToToggle = $($(this).find("button").attr('href'));
            $(".toggle:visible").not(divToToggle).hide();
            divToToggle.slideToggle("slow");

        });
        });


    </script>

<div class="container-fluid" id="fluid">
    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading" id="navtitle">
                    <h2 class="navtitle">Assignments</h2>
                </div>
                <div class="panel-body" id="navbuttons">
                    @foreach (var item in Model.assignments)
                    {
                        <button type="button" class="btn btn-default" id="btn-id" data-toggle="collapse" data-path="#accordion" href="#box_@item.id">@item.assignmentName</button>
                        <div id="button_@item.id" class="collapse">
                            <span> - @item.assignmentSubName </span>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-1"></div>

        <div class="col-md-7">


            @foreach (var item in Model.assignments)
            {
            <div class="toggle" id="box_@item.id">
                <div class="panel panel-default" id="button1_@item.id">
                    <div class="panel-heading">
                        <h1 class="panel-heading">@item.assignmentName - @item.assignmentSubName</h1>
                        <form action="~/Assignment/GetAssignmentFileFromUser" method="post" enctype="multipart/form-data">
                            <input type="hidden" class="asName" name="asName" value=@item.id />
                            <label for="file">
                                <span class="glyphicon-folder-open" id="foldericon" aria-hidden="true">File</Span>
                                <input type="file" name="file" style="display:none" />
                            </label>
                            
                            <label for="submit">
                                <span class="glyphicon-floppy-disk" aria-hidden="true">Submit</span>
                                <input type="submit" value="submit" />
                            </label>
                        </form>

                    </div>
                </div>
            </div>
            }
