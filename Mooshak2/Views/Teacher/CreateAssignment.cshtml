                <div class="panel-body">


                        <form class="form-horizontal" action="CreateAssignment" id="createassignment" method="POST">

                            <div class="form-group">

                                <label for="name">Name of assignment:</label>
                                <input type="text" id="name" name="name" />

                            </div>

                            <div class="form-group">
                                <label for="date">Due Date:</label>
                                <input type="date" id="date" name="date" />
                            </div>

                            <div class="form-group">
                                <label for="subname">Subname:</label>
                                <input type="text" id="subname" name="subname" placeholder="Enter the name for each part.."/>
                            </div>

                            <textarea rows="5" name="description" id="description" form="createassignment" placeholder="Description goes here..."></textarea>

                            <div class="row">
                                <textarea rows="5" name="input" id="input" form="createassignment" placeholder="Input goes here..."></textarea>

                                <textarea rows="5" name="correctoutput" id="correctoutput" form="createassignment" placeholder="Output goes here..."></textarea>
                            </div>

                            <div class="form-group">
                                <button type="submit" id="formButton" value="Save" >Save</button>
                            </div>
                        </form>
                </div>
            </div>
        </div>
    </div>
</div>

