@{ 
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mooshak 2.0</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header class="navbar navbar-default navbar-fixed-top">
        <h2 class="container"><img src="~/content/images/Moo2.png" width="54" height="54" alt="Image not found.." /><a href="/home">Mooshak 2.0</a></h2>
    </header>
               
      
      
    <div class="container">
        <div class="card card-container">
            <!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
            <img id="profile-img" class="profile-img-card" src="~/content/images/Moo2.png" />
            <form class="form-signin" action="Login/Login" method="POST">

                <span id="usernamespan" class="ruusername"></span>
                <input type="text" id="username" name="username" class="form-control" placeholder="User name" required autofocus>
                <input type="password" id="password" name ="password" class="form-control" placeholder="Password" required>
                
                <div class="alert alert-warning">
                    <p>Did you forget your Username or Password?</p>
                </div>

                <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Sign in</button>
            </form>
            <a href="#" class="forgot-password">
                Forgot the password?
            </a>
        </div><!-- /card-container -->
    </div><!-- /container -->

            
    <footer class="panel-footer">
        <div class="container">
            <p>&copy; @DateTime.Now.Year - The Moo-iest Experience!</p>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
 
</body>
</html>